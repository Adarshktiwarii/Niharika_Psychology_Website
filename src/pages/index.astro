---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ServicesTabs from '../components/ServicesTabs.jsx';
import Ticker from '../components/Ticker.astro';

// Use a more serene, abstract sky/nature image that fits the "Soul Udaan" theme better
const heroImage = "https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2073&q=80"; // Calm beach/sky horizon
---

<Layout title="Soul Udaan | Clinical Psychologist Niharika Singh">
  <Header />
  
  <main class="overflow-x-hidden">
    <!-- Hero Section (Animated Background) -->
    <section class="relative h-screen flex items-center justify-center overflow-hidden">
      <!-- Background Image with Ken Burns Effect -->
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-black/20 z-10"></div>
        <img 
          src={heroImage} 
          alt="Serene Horizon" 
          class="w-full h-full object-cover animate-ken-burns" 
        />
      </div>
      
      <div class="relative z-10 text-center text-white px-4">
        <h1 class="text-5xl md:text-7xl font-serif mb-6 drop-shadow-lg tracking-wide reveal">Because Every Soul Deserves to Soar</h1>
        <p class="text-xl md:text-2xl mb-10 font-light tracking-wider reveal reveal-delay-100">Clinical Psychology & Psychotherapy</p>
        <a href="#book" class="inline-block border-2 border-white px-10 py-4 text-lg tracking-widest hover:bg-white hover:text-soul-indigo transition-all duration-300 reveal reveal-delay-200 btn-shine">
          BEGIN YOUR JOURNEY
        </a>
      </div>
    </section>

    <!-- Introduction (Cards Layout) -->
    <section id="about" class="py-24 px-4 bg-soul-cream relative">
      <div class="max-w-6xl mx-auto -mt-32 relative z-20 grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
        {[
          { title: "Experience", desc: "3+ Years / 300+ Clients", icon: "ðŸŒ±" },
          { title: "Expertise", desc: "MPhil Clinical Psychology", icon: "ðŸŽ“" },
          { title: "Approach", desc: "Evidence-Based & Non-Judgmental", icon: "ðŸ¤" }
        ].map((card, index) => (
          <div class={`bg-white/95 backdrop-blur-sm p-10 shadow-xl rounded-sm text-center transform hover:-translate-y-2 transition-transform duration-300 border-t-4 border-soul-peach reveal reveal-delay-${(index + 1) * 100}`}>
            <div class="text-5xl mb-6">{card.icon}</div>
            <h3 class="text-2xl font-serif text-soul-indigo mb-3">{card.title}</h3>
            <p class="text-gray-600 font-light">{card.desc}</p>
          </div>
        ))}
      </div>

      <!-- Bio Section -->
      <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center gap-16">
        <div class="flex-1 w-full reveal">
          <div class="aspect-[3/4] bg-gray-200 rounded-sm overflow-hidden relative shadow-2xl max-w-sm mx-auto group">
             <img src="https://images.unsplash.com/photo-1544005313-94ddf0286df2?auto=format&fit=crop&q=80&w=800" alt="Niharika Singh" class="object-cover w-full h-full opacity-90 group-hover:scale-105 group-hover:opacity-100 transition-all duration-700" />
          </div>
        </div>
        <div class="flex-1 space-y-8 reveal reveal-delay-200">
          <h2 class="text-5xl font-serif text-soul-indigo">Hello, I am Niharika</h2>
          <div class="w-20 h-1 bg-soul-peach"></div>
          <p class="text-lg leading-relaxed text-gray-700 font-light">
            Welcome to a safe space where healing meets the horizon. My philosophy is grounded in the belief that within every individual lies the capacity to rise above challenges. 
          </p>
          <p class="text-lg leading-relaxed text-gray-700 font-light">
            Through evidence-based practices and a compassionate, non-judgmental approach, I help you navigate life's complexities to learn, heal, and soar.
          </p>
          <div class="pt-4">
             <span class="font-serif text-2xl italic text-soul-indigo">"Healing is a journey, not a destination."</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-24 bg-white">
      <div class="max-w-6xl mx-auto px-4 text-center mb-16 reveal">
        <h2 class="text-4xl font-serif text-soul-indigo mb-4">Our Services</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Comprehensive psychological support tailored to your unique journey.</p>
      </div>
      <div class="reveal reveal-delay-100">
        <ServicesTabs client:visible />
      </div>
    </section>

    <!-- Ticker -->
    <Ticker />

    <!-- Workshops Section -->
    <section id="workshops" class="py-24 bg-soul-cream text-center">
      <div class="max-w-4xl mx-auto px-4 reveal">
        <h2 class="text-4xl font-serif text-soul-indigo mb-8">Workshops & Events</h2>
        <div class="bg-white p-12 shadow-lg border border-soul-lavender/30 relative overflow-hidden group">
          <div class="absolute inset-0 bg-soul-peach/5 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></div>
          <p class="text-xl text-gray-500 mb-6 font-serif italic relative z-10">Upcoming workshops will be announced here.</p>
          <button class="relative z-10 px-8 py-3 bg-soul-peach/20 text-soul-indigo hover:bg-soul-peach/40 transition-colors rounded-full font-medium tracking-wide">
            Stay Tuned
          </button>
        </div>
      </div>
    </section>

    <!-- Booking Section -->
    <section id="book" class="py-24 bg-white">
      <div class="max-w-4xl mx-auto px-4 text-center reveal">
        <h2 class="text-4xl font-serif text-soul-indigo mb-8">Begin Your Journey</h2>
        <p class="mb-12 text-gray-600">Schedule a consultation to start your path towards healing and growth.</p>
        
        <!-- Calendly Inline Widget -->
        <div class="calendly-inline-widget" data-url="https://calendly.com/souludaan" style="min-width:320px;height:700px;"></div>
        <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
      </div>
    </section>
  </main>

  <Footer />
  
  <!-- Floating Action Button for Mobile -->
  <a href="#book" class="md:hidden fixed bottom-6 left-1/2 transform -translate-x-1/2 bg-soul-indigo text-white px-6 py-3 rounded-full shadow-lg z-50 flex items-center gap-2 hover:bg-opacity-90 transition-all btn-shine">
    <span>Schedule Now</span>
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
  </a>

  <!-- Scroll Animation Script -->
  <script>
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('active');
          observer.unobserve(entry.target); // Only animate once
        }
      });
    }, observerOptions);

    document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
  </script>
</Layout>
